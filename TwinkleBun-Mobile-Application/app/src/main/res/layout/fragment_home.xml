<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home_page_background">


    <!-- Wrapper LinearLayout to center the cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="190dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <!-- First Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_revisehub"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/holo_blue_light">

                <ImageView
                    android:layout_width="370dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/revise_hub"
                    android:scaleType="centerCrop"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Second Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_multiply"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#778BFB">

                <ImageView
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lets_multiply"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Third Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_scholarship"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#5CC9FA">

                <ImageView
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scholarship_papers"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
